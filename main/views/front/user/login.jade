extends ../layout
block content

	include ../mixins/menu.jade
	include ../mixins/forms/loginForm.jade
	include ../mixins/loginPopUp.jade
	
	mixin menu('login')

	div.navbar.navbar-fixed-top#loginPageNavBar
		div.container-fluid
			div.row-fluid
				div.span3
				div.span6
					a(href="/news/map")
						img(src="/images/new/logo.png")
				div.span3
	
		
	div.container-fluid#loginPageContent
		div.row-fluid
			div.span3
			div.span6
				mixin loginForm() 
				mixin loginPopUp
			div.span3
				
	script
		$(document).ready(function() {
			$('#login').focus();
		});

	style
		body {background : #f6f6f6}