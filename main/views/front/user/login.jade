extends ../layout
block content

	include ../mixins/menu.jade
	include ../mixins/forms/loginForm.jade
	include ../mixins/loginPopUp.jade
	
	mixin menu('login')

	div.navbar.navbar-fixed-top(style="background: #FFFFFF")
		div.container-fluid
			div.row-fluid
				div.span3
				div.span6(style="text-align:center;margin:0px;")
					a(href="/news/map")
						img(src="/images/new/logo.png")
				div.span3
	
		
	div.container-fluid(style="border-top: 1px solid #e2e2e2; background: #f6f6f6")
		div.row-fluid
			div.span3
			div.span6
				mixin loginForm() 
				mixin loginPopUp
			div.span3
				
	script
		$(document).ready(function() {
			$('#login').focus();
		});

	style
		body {background : #f6f6f6}