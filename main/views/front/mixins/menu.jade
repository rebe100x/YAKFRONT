						li
							a#connectedas
								|@
								= locals.user.login
						li.divider
						li
							//
								img.imgSmallProfile(src="/images/new/lacarte.png")
							a(href="/news/map") Map
						li
							//
								img.imgSmallProfile(src="/images/new/filinfo.png")
							a(href="/news/feed") Feed
						li
							//
								img.imgSmallProfile(src="/images/new/poster2.png")
