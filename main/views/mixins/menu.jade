mixin menu(active)
	div.navbar.navbar-fixed-top
		div.navbar-inner
			.container-fluid
				a.btn.btn-navbar(data-toggle="collapse",data-target=".nav-collapse") 
					span.icon-bar
					span.icon-bar
					span.icon-bar
					a.brand(href="#") YAKWALA
					
					div.btn-group.pull-right
						- if (session.user)
							a.btn.dropdown-toggle(href="#",data-toggle="dropdown")
								i.icon-user
								span= ' '+session.user.login+' ';
								span.caret
							ul.dropdown-menu
								li
									a(href="#") Mon profil
								li.divider
								li
									a(href="#") Quitter
						- else
							span 
								a.btn(href="/user/login") Login
					- if (active == 'map' || active == 'post')		
						div.btn-group.pull-right
							&nbsp;&nbsp;&nbsp;
							span
								span.btn#zoneLocButton(title="Mes favoris")
									i.icon-star 
									&nbsp;Mes endroits favoris
							&nbsp;&nbsp;&nbsp;
							span	
								span.btn(title="Autour de moi")
									i.icon-home 
									&nbsp;Autour de moi
							&nbsp;&nbsp;&nbsp;

					div.nav-collapse
						ul.nav
							- if (active == 'map')
								li.active
									a(href="/actu/map") La carte
							- else
								li
									a(href="/actu/map") La carte
							- if(active == 'fils')
								li.active
									a(href="/actu/fils") Le fil d'actu
							- else
								li
									a(href="/actu/fils") Le fil d'actu
							- if (active == 'post')
								li.active
									a(href="/actu/new") Poster une info
							- else
								li
									a(href="/actu/new") Poster une info
							- if (active == 'login')										
								li.active
									a(href="/user/login") Login
							- else
								li
									a(href="/user/login") Login
							- if (active == 'logout')												
								li.active
									a(href="/user/logout") Logout
							- else
								li
									a(href="/user/logout") Logout
							li
								a(href="/api/info") L'info brute	