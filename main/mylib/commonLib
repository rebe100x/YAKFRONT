exports.gup = function ( name )	{
		name = name.replace(/[\[]/,"\\\[").replace(/[\]]/,"\\\]");
		var regexS = "[\\?&]"+name+"=([^&#]*)";
		var regex = new RegExp( regexS );
		var results = regex.exec( window.location.href );
		if( results == null )
		return "";
		else
		return results[1];
}

exports.getCatName(_id) = function (_id) {
		$.get('/api/cats', function(data){

		$.each(data.cats, function(key,val) {
			if(val._id == _id)
				return val.title;
		});

		});
}